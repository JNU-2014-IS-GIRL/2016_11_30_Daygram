<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="10dp">

    <!--marginTop应该放在哪里不触顶呢？-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp">

        <!--不敢轻易改动名字-->
        <TextView
            android:id="@+id/list_diary_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/list_calendar"
            android:layout_marginLeft="10dp"
            android:text=""
            android:textSize="12sp" />

        <TextView
            android:id="@+id/list_diary_date_day"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/list_calendar"
            android:layout_below="@id/list_diary_date"
            android:layout_marginLeft="10dp"
            android:text=""
            android:textSize="12sp" />

        <TextView
            android:id="@+id/list_diary_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/list_content"
            android:layout_toRightOf="@id/list_diary_date"
            android:layout_marginRight="10dp"
            android:text=""
            android:gravity="center_vertical"
            android:textSize="15sp" />

    </RelativeLayout>

</LinearLayout>